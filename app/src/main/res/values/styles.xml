<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorThemeSecond</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStyleSplash" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorThemePrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
